<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/contador"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/reset"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="251dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FF9800"
        android:text="RESET ALL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/reset1"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FFC107"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/reset3"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FFC107"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/reset4"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FFC107"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset2"
        app:layout_constraintVertical_bias="0.013"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#FFC107"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset1"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/contador1"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/contador2"
        app:layout_constraintEnd_toStartOf="@+id/aum1"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/contador2"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/contador3"
        app:layout_constraintEnd_toStartOf="@+id/aum2"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/contador3"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="320dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/contador4"
        app:layout_constraintEnd_toStartOf="@+id/aum3"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/contador4"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="392dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/aum4"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aum1"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#8BC34A"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/aum2"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#8BC34A"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset2"
        app:layout_constraintTop_toBottomOf="@+id/aum1"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/aum3"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#8BC34A"
        android:text="+1"
        app:layout_constraintEnd_toStartOf="@+id/reset3"
        app:layout_constraintTop_toBottomOf="@+id/aum2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/aum4"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#8BC34A"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reset4"
        app:layout_constraintTop_toBottomOf="@+id/aum2"
        app:layout_constraintVertical_bias="0.006"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>